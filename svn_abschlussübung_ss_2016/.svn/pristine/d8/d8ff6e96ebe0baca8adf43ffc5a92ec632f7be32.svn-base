//------------------------------------------------------------------------------
bool FieldTeleport::onEnter(Player* player, CoordPair position,
  Direction* direction)
{
  player->teleport(player->getLevel()->getMap()->getPortalEnd(this, position));
  return true;
}

//------------------------------------------------------------------------------
bool FieldTeleport::onLeave(Player* player, Direction* direction)
{
  return true;
}

