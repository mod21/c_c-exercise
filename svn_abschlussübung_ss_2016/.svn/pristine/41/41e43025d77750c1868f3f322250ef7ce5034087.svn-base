#include "CommandReset.h"
#include "Exceptions.h"
#include "Game.h"
#include "Player.h"
#include "Level.h"

//------------------------------------------------------------------------------
CommandReset::CommandReset(std::string name) :
  Command(name)
{
}

//------------------------------------------------------------------------------
CommandReset::~CommandReset()
{
}

//------------------------------------------------------------------------------
int CommandReset::execute(Game& game, std::vector<std::string>& params)
{
  if (game.getLevel() == nullptr)
  {
    throw NoMazeLoadedException();
  }

  game.getLevel()->respawnPlayer();
  game.autoSave();

  return 1;
}
