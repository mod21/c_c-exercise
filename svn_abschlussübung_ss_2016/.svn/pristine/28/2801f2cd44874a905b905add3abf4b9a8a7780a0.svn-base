#include "FieldQuicksand.h"
#include "Direction.h"

//------------------------------------------------------------------------------
FieldQuicksand::FieldQuicksand(long malus) :
  Field('f' - 1 + (char) malus)
{
  malus_ = malus;
}

//------------------------------------------------------------------------------
bool FieldQuicksand::onEnter(Player* player, Direction* direction)
{
  player->move(direction);
  player->takeRemainingSteps(malus_);
  return true;
}

//------------------------------------------------------------------------------
bool FieldQuicksand::onLeave(Player* player, Direction* direction)
{
  return true;
}

//------------------------------------------------------------------------------
FieldQuicksand::~FieldQuicksand()
{

}
