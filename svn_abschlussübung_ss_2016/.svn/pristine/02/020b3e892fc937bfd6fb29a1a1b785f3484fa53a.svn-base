#ifndef COORDPAIR_H
#define COORDPAIR_H

class Direction;

class CoordPair
{
private:
  int x_, y_;

public:
  CoordPair();

  CoordPair(int x, int y);

  CoordPair(const CoordPair &pair);

  int getX();

  int getY();

  void add(int x, int y);

  void addDirection(Direction* d);

  const bool operator ==(const CoordPair &pair);

  const bool operator !=(const CoordPair &pair);
};

#endif
