#ifndef COMMANDPARSER_H
#define COMMANDPARSER_H

class Command;

#include <string>
#include <vector>

class CommandParser
{
private:
  CommandParser(CommandParser& other);
  Command* command_ptr_;
  std::vector<std::string> parameter_;
  std::string cmd_;

public:
  CommandParser();

  ~CommandParser();

  void readCommand();

  Command* getCommand()
  {
    return command_ptr_;
  }

  std::vector<std::string> getParams()
  {
    return parameter_;
  }
};

#endif
