using namespace std;

inline const int processErrorMessage(exception const & ex)
{
  // TODO wrong usage
  if (typeid(ex) == typeid(bad_alloc))
  {
    cout << DomainMessages::OUT_OF_MEMORY;
    return 1;
  }
  else if (typeid(ex) == typeid(ios_base::failure))
  {
    cout << DomainMessages::IOS_FAILURE;
    return 0;
  }
  else
  {
    cout << ex.what();
    return 0;
  }
};

